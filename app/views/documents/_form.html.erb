<%= form_for [@project, @document], html: { class: 'col-md-6 col-center' } do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Document name' %>
  </div>
  <div class="form-group">
    <%= f.text_area :content, class: 'form-control', rows: 10, placeholder: 'Content...' %>
  </div>
  <input type="hidden" name="document[project_id]" value="<%= params[:project_id] %>" />
  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
